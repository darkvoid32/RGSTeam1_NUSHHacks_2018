<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chrl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                android:textSize="12sp"
                android:text="00/00/2000"
                />

            <TextView
                android:id="@+id/chrl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/chrl_date"
                android:layout_toLeftOf="@id/chrl_date"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Name"
                />



            <TextView
                android:id="@+id/chrl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/chrl_date"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:text="00:00"
                />

            <TextView
                android:id="@+id/chrl_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/chrl_time"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:textSize="15sp"
                android:text="Hello"
                />

        </RelativeLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>